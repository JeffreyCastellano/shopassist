<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_left"
    android:background="#FAFAFA"
    android:layout_width="304dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/sidenav_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:src="@drawable/ic_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            >

            <TextView android:id="@+id/txt_name"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView android:id="@+id/txt_email"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout style="@style/SideNavItem"
        android:id="@+id/side_nav_home"
        android:onClick="onSideNavItemClicked"
        android:layout_marginTop="24dp"
        >
        <ImageView style="@style/SideNavIcon"
            android:src="@drawable/ic_sidenav_home"
            />
        <TextView style="@style/SideNavText"
            android:text="Home"
            android:layout_marginLeft="72dp"
            />
    </FrameLayout>

    <FrameLayout style="@style/SideNavItem"
        android:id="@+id/side_nav_explore"
        android:onClick="onSideNavItemClicked"
        >
        <ImageView style="@style/SideNavIcon"
            android:src="@drawable/ic_sidenav_explore"
            />
        <TextView style="@style/SideNavText"
            android:text="Explore Store"
            android:layout_marginLeft="72dp"
            />
    </FrameLayout>

    <FrameLayout style="@style/SideNavItem"
        android:id="@+id/side_nav_lists"
        android:onClick="onSideNavItemClicked"
        >
        <ImageView style="@style/SideNavIcon"
            android:src="@drawable/ic_sidenav_lists"
            />
        <TextView style="@style/SideNavText"
            android:text="Lists"
            android:layout_marginLeft="72dp"
            />
    </FrameLayout>

    <LinearLayout style="@style/SideNavItem"
        android:id="@+id/side_nav_history"
        android:onClick="onSideNavItemClicked"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        >
        <ImageView style="@style/SideNavIcon"
            android:src="@drawable/ic_sidenav_history"
            />
        <TextView style="@style/SideNavText"
            android:text="Shopping History"
            android:layout_marginLeft="40dp"
            />
        <ToggleButton
            android:background="@color/transparent"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:textOff=""
            android:textOn=""
            android:button="@drawable/toggle_button"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"

            />
    </LinearLayout>

    <FrameLayout style="@style/SideNavItem"
        android:id="@+id/side_nav_associates"
        android:onClick="onSideNavItemClicked"
        >
        <ImageView style="@style/SideNavIcon"
            android:src="@drawable/ic_sidenav_associates"
            />
        <TextView style="@style/SideNavText"
            android:text="Sales Associates"
            android:layout_marginLeft="72dp"
            />
    </FrameLayout>

    <LinearLayout
        android:background="#BFBFBF"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp" />

</LinearLayout>