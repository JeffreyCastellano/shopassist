<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.TechForTravelCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="?android:selectableItemBackground"
    >
    <!--android:onClick="onCardClicked"-->


    <android.support.v7.widget.CardView style="@style/Card"
        android:id="@+id/card"
        app:cardCornerRadius="3dp"
        android:visibility="visible"
        >

        <com.fa.google.shopassist.cards.ExpandableLayout style="@style/ExpandableLayout">

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/home_3a"
                />

            <ImageView style="@style/ImageFullWidth"
                android:id="@+id/btn_img_card1"
                android:src="@drawable/home_3b"
                />

            <ImageView style="@style/ImageFullWidth"
                android:id="@+id/btn_img_card2"
                android:src="@drawable/home_3c"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/home_3d"
                android:focusable="true"
                android:id="@+id/expandable_layout_expand"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_layout_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <ImageView style="@style/ImageFullWidthTappable"
                    android:src="@drawable/home_3_expand_a"
                    android:id="@+id/btn_img_card3"
                    />

                <ImageView style="@style/ImageFullWidth"
                    android:src="@drawable/home_3_expand_b"
                    android:id="@+id/btn_img_card4"
                    />

                <ImageView style="@style/ImageFullWidth"
                    android:src="@drawable/home_show_less"
                    android:id="@+id/expandable_layout_collapse"
                    />

            </LinearLayout>

        </com.fa.google.shopassist.cards.ExpandableLayout>


    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.TechForTravelCard>