<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.WhereIsProduct xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="?android:selectableItemBackground"
    >
    <!--android:onClick="onCardClicked"-->


    <android.support.v7.widget.CardView style="@style/Card"
        android:id="@+id/card"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView

                style="@style/ImageFullWidth"
                android:src="@drawable/img_whereis_nexus_map"
                android:id="@+id/btn_img_card1"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                />

            <ImageView
                style="@style/ImageFullWidth"
                android:layout_height="wrap_content"
                android:src="@drawable/img_whereis_nexus_name"

                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/layout_more"
                >

                <ImageView
                    style="@style/ImageFullWidth"
                    android:src="@drawable/img_whereis_nexus_more"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.WhereIsProduct>
