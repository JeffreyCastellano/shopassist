<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:id="@+id/card"
        android:visibility="visible"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_matthew_4a"
                android:onClick="onCardSectionClicked"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_matthew_4b"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_nexus6_link"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_matthew_4c"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_moto360_link"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_matthew_4d"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_chromecast_link"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>