<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.fa.google.shopassist.CartFragment"
    android:background="@color/gsa_bg"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        >

        <ImageView
            android:src="@drawable/cart_nexus6_case"
            android:id="@+id/img_fragment_express_row_item"
            android:background="@color/transparent"
            style="@style/ImageFullWidth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gsa_divider"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:orientation="vertical"
            android:background="@color/gsa_light_gray_blue"
            android:paddingTop="24dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                >

                <TextView
                    android:text="Cart Subtotal"
                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:text="$40.00"
                    android:id="@+id/txt_fragment_express_subtotal"
                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                >

                <TextView
                    android:text="Sales Tax"
                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:text="$3.00"
                    android:id="@+id/txt_fragment_express_tax"

                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                >

                <TextView
                    android:text="Order Total"
                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:text="$43.00"
                    android:textColor="@color/gsa_gray_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt_fragment_express_total"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gsa_divider"
                android:layout_marginTop="24dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                >

                <ImageButton
                    android:background="@color/transparent"
                    android:src="@drawable/express_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="expressCheckout"
                    android:layout_gravity="center_horizontal"

                    />

                <TextView
                    android:text="With this option you will be charged immediately and can exit the store without visting checkout."
                    android:textColor="@color/gsa_gray_light"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
