<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:orientation="vertical"
    android:background="@color/gsa_light_gray_blue"
    tools:context="com.fa.google.shopassist.setup.SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:background="@color/primary"
        android:elevation="3dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Assist Admin"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User information"
            android:textSize="24sp"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            />

            <EditText android:id="@+id/txt_first_name"
                android:textColor="@color/gsa_gray_dark"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="8dp"
                android:hint="First Name"
                android:textColorHint="@color/gsa_gray"
                android:padding="10dp"

                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:editable="true" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:background="@color/gsa_dark_gray"></View>

        <EditText android:id="@+id/txt_last_name"
            android:textColor="@color/gsa_gray_dark"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:hint="Last Name"
            android:textColorHint="@color/gsa_gray"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:editable="true" />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" android:background="@color/gsa_dark_gray"></View>

        <EditText android:id="@+id/txt_email_name"
            android:textColor="@color/gsa_gray_dark"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/gsa_gray"
            android:padding="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:editable="true" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"  android:background="@color/gsa_dark_gray"></View>
        <Button
            android:text="Start Demo"
            android:background="@color/gsa_link_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSaveUserClicked"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:padding="10dp"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >


        <ImageButton
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/btn_setup_whole_foods"
            android:id="@+id/btn_setup_whole_foods"
            />


        <ImageButton
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/btn_setup_target"
            android:id="@+id/btn_setup_target"
            />

    </LinearLayout>

</LinearLayout>
