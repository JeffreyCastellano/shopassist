<com.fa.google.shopassist.cards.WelcomeCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView style="@style/Card"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/card"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.fa.google.shopassist.cards.ExpandableLayout style="@style/ExpandableLayout">


                    <ImageView style="@style/ImageFullWidth"
                    android:id="@+id/img_store_welcome"
                    android:src="@drawable/img_welcome_google_store"
                    />

                    <TextView android:id="@+id/txt_welcome"
                        android:textColor="@color/gsa_dark_gray"
                        android:textSize="24sp"
                        android:text="Hello"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="16dp"

                        />

                <ImageView style="@style/ImageFullWidth"
                    android:src="@drawable/img_welcome_google_details"
                    android:id="@+id/img_store_welcome_details"
                    android:layout_marginBottom="27dp"
                    />

                <com.fa.google.shopassist.views.AspectImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_1b"
                    android:id="@+id/expandable_layout_expand"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expandable_layout_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gsa_divider"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="16dp"
                        android:paddingTop="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageButton style="@style/ImageFullWidthTappable"
                            android:src="@drawable/home_store_map"
                            android:id="@+id/btn_store_map"
                            android:onClick="onCardSectionClicked"
                            android:layout_width="0dp"
                            android:scaleType="centerCrop"
                            android:layout_height="112dp"
                            android:layout_weight=".5"
                            android:layout_marginRight="2dp"
                            />



                        <ImageButton style="@style/ImageFullWidthTappable"
                            android:src="@drawable/home_photo_gallery"
                            android:id="@+id/btn_photo_gallery"
                            android:onClick="onCardSectionClicked"
                            android:layout_width="0dp"
                            android:scaleType="centerCrop"
                            android:layout_height="112dp"
                            android:layout_weight=".5"
                            android:layout_marginLeft="2dp"
                            />

                    </LinearLayout>
                    <ImageView style="@style/ImageFullWidthTappable"
                        android:src="@drawable/home_1_expand_b"
                        android:id="@+id/btn_explore_store"
                        />

                </LinearLayout>

            </com.fa.google.shopassist.cards.ExpandableLayout>

            <!--<TextView android:id="@+id/txt_welcome"-->
                <!--android:textColor="@color/gsa_dark_gray"-->
                <!--android:textSize="24sp"-->
                <!--android:text=""-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="top"-->
                <!--android:layout_marginTop="216dp"-->
                <!--android:layout_marginLeft="16dp"-->

                <!--/>-->

        </FrameLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.WelcomeCard>