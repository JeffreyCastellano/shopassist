<com.fa.google.shopassist.cards.Lists.ListsCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:list_title="My Lists"
    app:list_data="mylists"

    >

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:id="@+id/card"

        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <TextView android:id="@+id/txt_list_title"
                android:textColor="@color/gsa_dark_gray"
                android:textSize="24sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp"
                android:text="title"
                />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_list_content"
                    android:dividerHeight="1px"
                    android:divider="@color/gsa_gray"
                    >
                </ListView>

            </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.Lists.ListsCard>