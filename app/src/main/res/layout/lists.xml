<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.TouchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        style="@style/Card"

        android:id="@+id/card"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/lists_a"
                />

            <ImageView style="@style/ImageFullWidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lists_b"
                android:onClick="onCardSectionClicked"
                android:tag="prod_list"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.TouchLayout>
