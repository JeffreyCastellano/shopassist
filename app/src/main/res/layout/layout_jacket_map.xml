<com.fa.google.shopassist.cards.TouchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="?android:selectableItemBackground"

    >
    <!--android:onClick="onCardClicked"-->


    <android.support.v7.widget.CardView style="@style/Card"
        android:id="@+id/card"
        app:cardCornerRadius="3dp"
        android:visibility="visible"

        >

        <ImageView
            style="@style/ImageFullWidth"
            android:id="@+id/btn_find_jacket_in_store"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="true"
            android:src="@drawable/btn_find_jacket_in_store"
            android:onClick="onCardClicked"
            />

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.TouchLayout>