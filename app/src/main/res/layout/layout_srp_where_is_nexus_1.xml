<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.TouchLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/Card"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/card"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView style="@style/TappableImage"
                android:src="@drawable/srp_where_is_nexus_1a"
                android:onClick="mapNexus6"
                />

            <ImageView style="@style/TappableImage"
                android:src="@drawable/srp_where_is_nexus_1b"
                android:onClick="onCardSectionClicked"
                android:tag="nexus"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.TouchLayout>