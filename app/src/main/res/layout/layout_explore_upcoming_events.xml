<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.TouchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="?android:selectableItemBackground"
    >

    <android.support.v7.widget.CardView style="@style/Card"
        android:id="@+id/card"
        app:cardCornerRadius="3dp"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/explore_5a"
                android:focusable="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_img_card1"
                android:src="@drawable/explore_5b"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_img_card2"
                android:src="@drawable/explore_5c"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/layout_more"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_blue"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="19dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More events"
                    android:textColor="@color/gsa_link_blue"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.TouchLayout>