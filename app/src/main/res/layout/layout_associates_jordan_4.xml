<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:id="@+id/card"
        app:cardCornerRadius="3dp"
        android:visibility="visible"
        android:layout_marginLeft="4dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_jordan_4a"
                android:onClick="onCardSectionClicked"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_jordan_4b"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_galaxy_link"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_jordan_4c"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_moto360_link"
                />

            <ImageView style="@style/ImageFullWidth"
                android:src="@drawable/associates_jordan_4d"
                android:onClick="onCardSectionClicked"
                android:id="@+id/img_sony_earbuds_link"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

 </RelativeLayout>