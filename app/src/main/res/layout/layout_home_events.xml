<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.EventsHomeCard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:background="?android:selectableItemBackground"
    >
    <!--android:onClick="onCardClicked"-->


    <android.support.v7.widget.CardView style="@style/Card"
        android:id="@+id/card"
        app:cardCornerRadius="3dp"
        android:visibility="visible"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <ImageView
                style="@style/ImageFullWidth"

                android:src="@drawable/home_6a"
                android:id="@+id/btn_img_card1"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                />

            <ImageView
                style="@style/ImageFullWidthTappable"
                android:src="@drawable/btn_more_events"
                android:id="@+id/layout_more" />

         </LinearLayout>

    </android.support.v7.widget.CardView>

</com.fa.google.shopassist.cards.EventsHomeCard>
