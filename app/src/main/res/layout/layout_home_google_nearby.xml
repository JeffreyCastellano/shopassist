<?xml version="1.0" encoding="utf-8"?>
<com.fa.google.shopassist.cards.RecommendedNearby
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        style="@style/Card"
        android:id="@+id/card"


    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_recommended_nearby"
            android:orientation="vertical"
            android:background="@color/white"

            >

            <ImageView
                style="@style/ImageFullWidth"
                android:src="@drawable/home_google_nearby_a"
                />

            <ImageView
                style="@style/ImageFullWidth"
                android:onClick="onCardSectionClicked"
                android:background="?android:selectableItemBackground"
                android:id="@+id/home_google_available_show_map"
                android:src="@drawable/home_google_nearby_b"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</com.fa.google.shopassist.cards.RecommendedNearby>